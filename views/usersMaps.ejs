<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Maps</title>

  <!-- Styles and Scripts -->
  <%- include('partials/_stylesAndScripts') %>

  <!-- userRelMaps.scss -->
  <link rel="stylesheet" href="/styles/userRelMapsLayout.css" type="text/css"/>

  <!-- usersMaps.scss -->
  <link rel="stylesheet" href="/styles/usersMaps.css" type="text/css"/>

  <!-- Pass EJS template to front end -->
  <script>
    const userId = '<%= userId %>';
  </script>

  <!-- usersMaps.js -->
  <!-- Is script to render page -->
  <script type="text/javascript" src="/scripts/usersMaps/app.js" defer></script>
</head>


<body>
  <!-- Navbar -->
  <%- include('partials/_header', {userId}) %>

  <!-- Popup to edit map -->
  <div id="pop-up-background-edit-map" class="pop-up-background">
    <div class="pop-up">
      <section>
        <h2>Edit Map Details</h2>
        <form id="updateMapForm" action="">
          <label for="title">Title:</label>
          <input type="text" name="title" id="title">

          <label for="city">City:</label>
          <input type="text" name="city" id="city">

          <label for="description">Description:</label>
          <input type="text" name="description" id="description">

          <label for="cover_img">Link to cover photo:</label>
          <input type="url" name="cover_img" id="cover_img">

          <button type="submit">Update Map</button>
        </form>
      </section>
      <section>
        <h2>Collaborators</h2>
        <table id="collaborators" style="width: 100%;">
        </table>
        <div>
          <form id="addCollaboratorForm">
            <label for="name">Users account ID</label>
            <input type="text" name="name" id="name" required>
            <button type="submit">Add</button>
          </form>
        </div>
      </section>
    </div>
  </div>

  <!-- Popup to add map -->
  <div id="pop-up-background-add-map" class="pop-up-background">
    <div class="pop-up">
      <section>
        <h2>Add Map</h2>
        <form id="addMapForm" action="">
          <label for="title">Title:</label>
          <input type="text" name="title" id="title" required>

          <label for="city">City:</label>
          <input type="text" name="city" id="city" required>

          <label for="description">Description:</label>
          <input type="text" name="description" id="description" required>

          <label for="cover_img">Link to cover photo:</label>
          <input type="url" name="cover_img" id="cover_img" required>

          <button type="submit">Add</button>
        </form>
      </section>
    </div>
  </div>

  <!-- Button to show add new map popup -->
  <button id="addMapBtn">ADD NEW MAP</button>
  <h1>List of My Maps</h1>

  <!-- Container for maps -->
  <!-- Used for script -->
  <div id="mapContainer"></div>
</body>

</html>
